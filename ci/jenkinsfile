pipeline {
    agent any
    stages {
        stage('Newman Tests') {
            steps {
                sh '''
                node --version
                cd api/newman
                newman run Proyecto.postman_collection.json -e Heroku.postman_environment.json
                '''                
            }
        }
        stage('RestAssured Tests') {
            steps {
                sh '''
                cd api/rest_assured
                mvn clean test
                '''                
            }
        }   
    }
}

