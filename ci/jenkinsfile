pipeline {
    agent any
    stages {
        stage('Newman Tests') {
            steps {
                sh '''
                node --version
                cd api/newman
                newman run Proyecto.postman_collection.json -e Heroku.postman_environment.json
                '''                
            }
        }
        stage('Jmeter Tests') {
            steps {
                sh '''
                cd load
                export PATH=/home/pjcalvov/jmeter/apache-jmeter-5.3/bin:$PATH
                jmeter -n -t examen_test_plan.jmx
                '''               
            }
        }
        stage('RestAssured Tests') {
            steps {
                sh '''
                cd api/rest_assured
                mvn clean test
                '''                
            }
    }
}

