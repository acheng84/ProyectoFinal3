pipeline {
    agent any
    stages {
        stage('Newman Tests') {
            steps {
                sh '''
                node --version
                cd api/newman
                newman run proyecto.postman_collection.json -e heroku.postman_environment.json
                cd..
                cd..
                '''                
            }
        }

        stage('Jmeter Tests') {
            steps {
                sh '''
                cd load
                //export PATH=/home/pjcalvo/jmeter/apache-jmeter-5.3/bin:$PATH
                jmeter -n -t examen_test_plan.jmx
                '''                
            }
        }
    }
}

